<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FateWeaver"
             x:Class="FateWeaver.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Add merged dictionaries for your other styles -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global style for all Labels -->
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="DragonSlayer" />
            </Style>

            <!-- Global style for all Buttons -->
            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="DragonSlayer" />
            </Style>

            <!-- Add more styles for other controls if necessary -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
